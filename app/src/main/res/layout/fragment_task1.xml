<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Task1Fragment">


    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/paragraph1_fragment1"
            style="@style/StyleTheory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            app:layout_constraintBottom_toTopOf="@+id/paragraph2_fragment1"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="параграф1" />

        <TextView
            android:id="@+id/paragraph2_fragment1"
            style="@style/StyleTheory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/paragraph1_fragment1"
            tools:text="множество" />
        <ImageView
            android:id="@+id/image1_fragment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/paragraph2_fragment1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:adjustViewBounds="true"

             />
        <TextView
            android:id="@+id/paragraph3_fragment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/image1_fragment1"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/StyleTheory"
            android:text="параграф 3"
        />




    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

