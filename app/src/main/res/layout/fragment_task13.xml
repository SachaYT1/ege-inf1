<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Task13Fragment">


    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/header1_fragment13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="40dp"
            android:layout_marginTop="70dp"
            style="@style/StyleHeaderTheory"
            android:text="Теория для задачи 13"
            app:layout_constraintBottom_toTopOf="@+id/paragraph1_fragment13"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/paragraph1_fragment13"
            style="@style/StyleTheory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/header1_fragment13"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="граф" />
        <TextView
            android:id="@+id/header2_fragment13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/paragraph1_fragment13"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="65dp"
            style="@style/StyleHeaderTheory"
            android:layout_marginTop="20dp"
            android:text="Разбор заданий"
            />
        <TextView
            android:id="@+id/paragraph2_fragment13"
            style="@style/StyleTheory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/header2_fragment13"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="задача 1" />
        <ImageView
            android:id="@+id/image2_fragment13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/paragraph2_fragment13"
            app:layout_constraintLeft_toLeftOf="parent"
            android:adjustViewBounds="true" />
        <TextView
            android:id="@+id/paragraph3_fragment13"
            style="@style/StyleTheory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/image2_fragment13"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="решение задачи 1" />
        <ImageView
            android:id="@+id/image3_fragment13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/paragraph3_fragment13"
            app:layout_constraintLeft_toLeftOf="parent"
            android:adjustViewBounds="true" />


        <TextView
            android:id="@+id/paragraph4_fragment13"
            style="@style/StyleTheory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/image3_fragment13"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="задача 2" />
        <ImageView
            android:id="@+id/image4_fragment13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/paragraph4_fragment13"
            app:layout_constraintLeft_toLeftOf="parent"
            android:adjustViewBounds="true" />
        <TextView
            android:id="@+id/paragraph5_fragment13"
            style="@style/StyleTheory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/image4_fragment13"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="решение задачи 2" />
        <ImageView
            android:id="@+id/image5_fragment13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/paragraph5_fragment13"
            app:layout_constraintLeft_toLeftOf="parent"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/paragraph6_fragment13"
            style="@style/StyleTheory"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/image5_fragment13"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
