<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Task3Fragment">


    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/header1_fragment3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="40dp"
            android:layout_marginTop="70dp"
            style="@style/StyleHeaderTheory"
            android:text="Теория для задачи 3"
            app:layout_constraintBottom_toTopOf="@+id/paragraph1_fragment3"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/paragraph1_fragment3"
            style="@style/StyleTheory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/header1_fragment3"

            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="базы данных, ключевое поле" />
        <ImageView
            android:id="@+id/image1_fragment3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/paragraph1_fragment3"
            app:layout_constraintLeft_toLeftOf="parent"
            android:adjustViewBounds="true"
            />

        <TextView
            android:id="@+id/paragraph2_fragment3"
            style="@style/StyleTheory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/image1_fragment3"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="реляционная база данных" />

        <TextView
            android:id="@+id/header2_fragment3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/paragraph2_fragment3"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="65dp"
            style="@style/StyleHeaderTheory"
            android:layout_marginTop="100dp"
            android:text="Разбор заданий"
            />

        <TextView
            android:id="@+id/paragraph3_fragment3"
            style="@style/StyleTheory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/header2_fragment3"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="условие" />
        <TextView
            android:id="@+id/paragraph4_fragment3"
            style="@style/StyleTheory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/paragraph3_fragment3"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="движение товаров" />
        <ImageView
            android:id="@+id/image4_fragment3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/paragraph4_fragment3"
            app:layout_constraintLeft_toLeftOf="parent"
            android:adjustViewBounds="true"
            />
        <TextView
            android:id="@+id/paragraph5_fragment3"
            style="@style/StyleTheory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/image4_fragment3"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="товар" />
        <ImageView
            android:id="@+id/image5_fragment3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/paragraph5_fragment3"
            app:layout_constraintLeft_toLeftOf="parent"
            android:adjustViewBounds="true"
            />
        <TextView
            android:id="@+id/paragraph6_fragment3"
            style="@style/StyleTheory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/image5_fragment3"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="магазин" />
        <ImageView
            android:id="@+id/image6_fragment3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/paragraph6_fragment3"
            app:layout_constraintLeft_toLeftOf="parent"
            android:adjustViewBounds="true"
            />
        <TextView
            android:id="@+id/paragraph7_fragment3"
            style="@style/StyleTheory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/image6_fragment3"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="вопрос задачи" />


        <TextView
            android:id="@+id/paragraph8_fragment3"
            style="@style/StyleTheory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/paragraph7_fragment3"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="решение" />
        <TextView
            android:id="@+id/paragraph9_fragment3"
            style="@style/StyleTheory"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/paragraph8_fragment3"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="" />

















    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
